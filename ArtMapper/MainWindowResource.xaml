<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:ArtMapper.ViewModels"
                    xmlns:vw="clr-namespace:ArtMapper.Views">
    <DataTemplate DataType="{x:Type vm:ArtGridViewModel}">
        <vw:ArtGridView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AddArtViewModel}">
        <vw:AddArt />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ScanDriveViewModel}">
        <vw:ScanDrive />
    </DataTemplate>

    <DataTemplate x:Key="ViewModelTemplate">
        <ItemsControl ItemsSource="{Binding}" />
    </DataTemplate>
</ResourceDictionary>